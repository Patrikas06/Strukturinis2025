#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

int main() {
    string val;
    double suma;
    char veiksmas;
    int pasirinkimas = 1; 

    double GBP_Bendras   = 0.8729;
    double GBP_Pirkti    = 0.8600;
    double GBP_Parduoti  = 0.9220;
    double USD_Bendras   = 1.1793;
    double USD_Pirkti    = 1.1460;
    double USD_Parduoti  = 1.2340;
    double INR_Bendras   = 104.6918;
    double INR_Pirkti    = 101.3862;
    double INR_Parduoti  = 107.8546;

    while (pasirinkimas == 1) {

        cout << "Pasirinkite veiksma:"<<endl;
        cout << "C - Palyginti valiutos kursa"<<endl;
        cout << "P - Pirkti valiuta (is euru)"<<endl;
        cout << "B - Parduoti valiuta (i eurus)"<<endl;
        cout << "Jusu pasirinkimas: "<<endl;
        cin >> veiksmas;

        cout << "Valiuta (GBP, USD, INR): "<<endl;
        cin >> val;

        if (veiksmas == 'C') {
            if (val == "GBP") cout << "1 EUR = " << GBP_Bendras << " GBP" <<endl;
            else if (val == "USD") cout << "1 EUR = " << USD_Bendras << " USD " << endl;
            else if (val == "INR") cout << "1 EUR = " << INR_Bendras << " INR" << endl;
            
        }

        else if (veiksmas == 'P') {
            cout << "Iveskite kiek euru norite iskeisti: "<<endl;
            cin >> suma;

            if (val == "GBP")
                cout << suma << " € gausite " << suma * GBP_Pirkti << " £"<< endl;
            else if (val == "USD")
                cout << suma << " € gausite " << suma * USD_Pirkti << " $"<< endl;
            else if (val == "INR")
                cout << suma << " € gausite " << suma * INR_Pirkti << " ₹" << endl;
           
        }

        else if (veiksmas == 'B') {
            cout << "Iveskite kiek valiutos norite parduoti: " << endl;;
            cin >> suma;

            if (val == "GBP")
                cout << "Pardavus " << suma << " £, gausite " << suma / GBP_Parduoti << " € " << endl;
            else if (val == "USD")
                cout << "Pardavus " << suma << " $, gausite " << suma / USD_Parduoti << " € " << endl;
            else if (val == "INR")
                cout << "Pardavus " << suma << " ₹, gausite " << suma / INR_Parduoti << " € " << endl;
            

        

        cout << "Norite grizti i pradzia? (1 - Taip, 0 - Iseiti): "<<endl;
        
        cin >> pasirinkimas;
    
}
    cout << "Programa baigta" << endl;
    
    return 0;
}
}
